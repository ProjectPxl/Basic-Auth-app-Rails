<% page_title = "Auth sign up" %>

<div class="SingnUp_Form">

<h1>Sign Up</h1>

<%= form_for(:user, :url => {:controller => 'users', :actions => 'create'}) do |f| %>

<p>Username: <br/> <%= f.text_field :username %></p>

<p>Email: <br/> <%= f.text_field :email %></p>

<p>Password: <br/> <%= f.password_field :password %></p>

<p>Password Conf.: <br/> <%= f.password_field :password_confirmation %></p>

<%= f.submit :Signup %>
<% end %>

<% if @user.errors.any? %>
	<ul class="SignUp_Errors">
		<% for message_error in @user.errors.full_messages %>
		<li>* <%= message_error %></li>
		<%end%>
	</ul>
<%end%>

</div>
	